<Window x:Class="BeautifulWeather.Views.Auth.AuthorizationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BeautifulWeather.Views.Auth"
        mc:Ignorable="d"
        Name="AuthWindow"
        Title="{DynamicResource AuthorizationWindowTitle}" Height="300" Width="350"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Content="{DynamicResource SignIn}"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Center"
            FontSize="20"/>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label 
            Content="{DynamicResource Login}"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            Margin="10"/>
            <TextBox
            x:Name ="AuthorizationLogin_TextBox"
            Grid.Column="1"
            Width="200"
            HorizontalAlignment="Right"
            FontSize="20"
            Margin="10"
            Text="{Binding Login}"/>
            <Label
            Grid.Row="1"
            Content="{DynamicResource Password}"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            Margin="10"/>
            <TextBox
            x:Name ="AuthorizationPassword_TextBox"
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            HorizontalAlignment="Right"
            FontSize="20"
            Margin="10"
            Text="{Binding Password}"/>
        </Grid>
        <CheckBox
            x:Name="AuthorizationRememberMe_CheckBox"
            Grid.Row="2"
            Content="{DynamicResource RememberMe}"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            Margin="10"
            IsChecked="{Binding RememberMe}"/>
        <Button
            x:Name="Enter_Button"
            Grid.Row="3"
            Content="{DynamicResource SignIn}"
            Command="{Binding LoginCommand}"
            CommandParameter="{Binding ElementName=AuthWindow}"
            Margin="10"/>
    </Grid>
</Window>
